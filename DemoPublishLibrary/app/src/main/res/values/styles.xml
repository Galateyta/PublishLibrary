<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="OvalButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingRight">@dimen/oval_button_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/oval_button_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/oval_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/oval_button_vertical_padding</item>
        <item name="android:textSize">@dimen/general_button_text_size</item>
        <item name="android:layout_height">@dimen/general_button_height</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/submit_button_text_color</item>
    </style>
</resources>
